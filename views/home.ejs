<html>
    <head>
        <title>
            <%# = locals.title %>
            Contact List Management
        </title>
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
        <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet" />
        <style>
            .scroll-y{
                overflow-y: scroll;
                height: 500px;
            }
            .centerHeading{
                text-align: center;
                font-size: xx-large;
                font-family: Georgia, 'Times New Roman', Times, serif;
              
            }
        </style>
        </head>
    <body>
        <div class="jumbotron row">
            <div class="col-md-6 scroll-y">
            <ul class="list-group list-group-flush">
                <li class="list-group-item centerHeading">Contact List</li>
                <%# for(let i of contact_list) { %>
                    <li class="list-group-item">
                        <li class="list-group-item list-group-item-primary">Codreal Youtube</li>
                        <%# = i.name %>
                        <li class="list-group-item list-group-item-danger">9999999</li>
                        <li class="list-group-item"><button onclick="window.location.href='/delete_contact/?id='" class="btn btn-danger">Delete</button></li>
                    </li>

                <%# } %>
            </ul>
            </div>
            <div class="col-md-6">
                    <form action="/create_contact" method="post">
                        <div class="form-group">
                          <label for="userName">Name:</label>
                          <input type="text" class="form-control" id="userName" name="name" aria-describedby="userTooltip" placeholder="Enter Your Name" required>
                        </div>
                        <div class="form-group">
                          <label for="userPhone">Mobile No:</label>
                          <input type="tel" class="form-control" id="userPhone" name="phone" aria-describedby="phone" placeholder="Enter your Mobile no." required>
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg btn-block">Add Contact</button>
                      </form>
                </div>
        </div>
    </body>
</html>